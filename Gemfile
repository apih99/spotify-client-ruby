# frozen_string_literal: true

source "https://rubygems.org"

# gem "rails"

gem 'httparty'
gem 'dotenv'
gem 'base64'
gem 'json'
gem 'webrick'  # For the OAuth callback server
gem 'rest-client'
gem 'ffi'  # Required by rest-client
gem 'sinatra'  # Web framework
gem 'sinatra-contrib'  # Additional Sinatra features
gem 'erb'  # For templates
gem 'rack'  # Web server interface
gem 'rackup'  # Rack server launcher

group :test do
  gem 'rspec'    # For testing
  gem 'webmock'  # For mocking HTTP requests in tests
end
